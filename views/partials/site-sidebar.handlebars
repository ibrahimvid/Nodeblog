
<aside id="aside" class="col-md-4">

    <!-- SEARCH -->
    <div class="widget">
        <div class="widget-search">
            <form action="/posts/search" method="GET">
                <input class="search-input form-control" type="text" name="search" placeholder="Search">
                <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>
    <!-- /SEARCH -->

    <!-- CATEGORIES -->
    <div class="widget">
        <h3 class="mb-3">Categories</h3>
        <div class="widget-category">

            {{#each categories}}
                <a href="/posts/category/{{_id}}">{{name}}<span>({{num_of_posts}})</span></a>
            {{/each}}

        </div>
    </div>
    <!-- /CATEGORIES -->

    <!-- LATEST POSTS -->
    <div class="widget">
        <h3 class="mb-3">Latest Posts</h3>

        <!-- SINGLE POST -->

        {{#each (limit posts 3)}}

        <div class="widget-post">
            <a href="/posts/{{_id}}">
                <img class="img-fluid" src="{{image}}" alt="">{{title}}
            </a>
            <ul class="blog-meta">
                <li>{{generateDate date 'MMM DD YYYY'}}</li>
            </ul>
        </div>
        <!-- /SINGLE POST -->

        {{/each}}

    </div>
    <!-- /LATEST POSTS -->

</aside>